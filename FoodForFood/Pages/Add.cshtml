@page
@model FoodForFood.Pages.AddModel
@{
    ViewData["Title"] = "Add a Recipe";
}

<link rel="stylesheet" href="~/lib/virtual-select-master/dist/virtual-select.min.css" />
<script src="~/lib/virtual-select-master/dist/virtual-select.min.js"></script>
<script src="~/js/AddRecipe.js"></script>

<div class="text-center">
    <h4 class="display-4">What Type of Food Are You Adding?</h4>
</div>
<br />

<!--MEAL SELECTION START -->
<div class="text-center" style="margin-bottom: 5px" id="selectOption">
    <h6>Pick an Option to Continue</h6>
</div>
<div class="text-center" id="typeSelection">
    <span id="tBrkFst" disabled class="btn btn-secondary" style="margin-right: 10px;">Breakfast</span>
    <span id="tLunch" disabled class="btn btn-secondary" style="margin-right: 10px;">Lunch</span>
    <span id="tDinner" class="btn btn-secondary" style="margin-right: 10px;">Dinner</span>
    <span id="tDesert" disabled class="btn btn-secondary" style="margin-right: 10px;">Desert</span>
    <br />
    <div style="margin-top: 10px">
        <span id="tSnack" disabled class="btn btn-secondary" style="margin-right: 10px;">Snack</span>
        <span id="tSide" class="btn btn-secondary" style="margin-right: 10px;">Side</span>
    </div>
</div>
<div class="text-center">
    <h8><small><i>More Option Availability Coming Soon...</i></small></h8>
</div>

<script type="text/javascript">
    $("#typeSelection span[disabled]").removeClass().addClass("btn btn-outline-secondary disabled");

    $("#typeSelection span:not([disabled])").on("click", function () {
        $('#typeSelection span:not([disabled])').removeClass().addClass("btn btn-outline-dark");
        $(this).removeClass().addClass("btn btn-secondary");
    })

    function commonChanges() {
        $(".sections").hide();
        $("#selectOption").css("visibility", "hidden");
        $("#break1").css("visibility", "visible");
    }

    $("#tDinner").on("click", function () {
        commonChanges()
        if (!document.getElementById("DinnerSection")) {
            buildDinnerSection();
        }
        $("#DinnerSection").show();
        $("#DinnerSection")[0].scrollIntoView({
            behavior: 'smooth'
        });
    })

    $("#tSide").on("click", function () {
        commonChanges()
        $("#SideSection").show();
        $("#SideSection")[0].scrollIntoView({
            behavior: 'smooth'
        });
    })
</script>
<br />
<hr id="break1" style="visibility: hidden" />
<br />